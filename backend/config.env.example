# Backend Environment Variables Template
# Copy this to config.env and fill in your actual values

NODE_ENV=development
PORT=8000
DATABASE_LOCAL=mongodb://127.0.0.1:27017/HomelyHub

# JWT Configuration (min 32 characters)
JWT_SECRET=your-secret-key-min-32-characters-long
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Email Configuration (Mailtrap for development)
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_PORT=25
EMAIL_USERNAME=your-mailtrap-username
EMAIL_PASSWORD=your-mailtrap-password

# Stripe Payment Configuration
STRIPE_SECRECT_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Cloudinary Image Upload Configuration
CLOUD_NAME=your-cloudinary-name
CLOUD_KEY=your-cloudinary-api-key
CLOUD_KEY_SECRET=your-cloudinary-api-secret
